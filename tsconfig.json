{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es6",
      "types": [
          "reflect-metadata"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": [
          "es6"
      ],
      "allowUnreachableCode": true,
      "rootDir": "./src/example-microservice",
      "sourceMap": false,
      "outDir": "./dist/example-microservice",
      "removeComments": true
  },
  "include": [
      "./src/example-microservice/**/*"
  ],
  "exclude": [
      "./node_modules/**/*",
      "./dist/**/*"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}